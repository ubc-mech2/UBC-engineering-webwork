#image scale
$imgScaleA = 1;
$imgScaleB = .15;

#image aspect ratio
$widthA = $imgScaleA*410;
$heightA = $imgScaleA*274;
$widthB = $imgScaleB*2351;
$heightB = $imgScaleB*972;

loadMacros(   
	"PGstandard.pl",     # Standard macros for PG language
	"MathObjects.pl",
	"PGML.pl",
	"parserPopUp.pl",
	"parserMultiAnswer.pl",
	"parserRadioButtons.pl",
