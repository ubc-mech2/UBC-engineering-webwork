   	);

##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$theta = random(20,20,1); #degree
$theta_r = $theta*pi/180; #rad
$r = 0.3;# m
$rb = 2*$r/pi;
$m = 10; #kg
$g = 9.81; #m/s2

#computation
$alpha = $m*$g*$rb*cos($theta_r)/ ($m*$r**2);
$RT = $m*$g*cos($theta_r) -$m* $alpha*$rb;
$Rn = $m*$g*sin($theta_r);
$R = sqrt($RT**2 + $Rn**2);

#set tolerance
Context()->flags->set(
tolerance=>.1,
tolType=>'absolute'
);

