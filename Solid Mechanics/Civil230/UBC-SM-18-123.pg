Context("Numeric");

#given
$q = 5.8;
$b = 140;
$h = 240;
$L = 4;

#computation 
$sigmamax1 = ($q*$L**2/8)/($b*$h**2/6)*1000000;
$mmax = 9.40376/100*$q*$L*$L;
$sigmamax2 = $mmax/(1/6*$b*$h**2)*1000000;

#set tolerance
Context()->flags->set(
tolerance=>.01);

