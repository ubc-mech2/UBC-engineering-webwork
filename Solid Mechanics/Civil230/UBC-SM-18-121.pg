##############################################################
#
#  Setup
#
#

Context("Numeric");

#given
$L = 2;
$eps = .001;
$c = 85;
$ea = .0008;
$L2 = 4;

#computation 
$rho = $c/$eps/1000;
$kappa = 1/$rho;
$delta = $L * tan($L/$rho /2)*1000;
$h = $rho * $ea * 2*1000;
$delta3 = $L2 * tan($L2/($c/$ea) /2)*1000*1000;

#set tolerance
Context()->flags->set(
tolerance=>.01);

