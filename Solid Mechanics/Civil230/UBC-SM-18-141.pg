Context("Numeric");

#given
$b = 200;
$t  =12;
$h = 300;
$Ew = 11;
$Es = 190;
$sw = 7.5;
$ss = 110;

#computation 
$Iwz = $b*$h**3/12;
$Isz = 2 * $t * $h**3/12;
$tmpz = $Ew*$Iwz + $Es*$Isz;

$Iwy = $h*$b**3/12;
$Isy = 2*($t**3*$h/12 + .25*$t*$h*($b+$t)**2);
$tmpy = $Ew*$Iwy + $Es*$Isy;

$maxwz = $sw*$tmpz*2/$h/$Ew;
$maxsz = $ss*$tmpz*2/$h/$Es;

$mmaxz = min($maxwz,$maxsz)/1000000;

$maxwy = $sw*$tmpy*2/$b/$Ew;
$maxsy = $ss*$tmpy/($b/2+$t)/$Es;

$mmaxy = min($maxwy,$maxsy)/1000000;

$tnew = $tmpy*$ss/$Es/$mmaxz/1000000;

#set tolerance
Context()->flags->set(
tolerance=>.01);

