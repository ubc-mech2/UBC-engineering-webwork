##############################################################
#
#  Setup
#
#

Context("Numeric");

#given
$L = 14;
$sigma = 110;
$tau = 50;

$b = 450;
$h = 1864;
$h1 = 1800;
$tf = 32;
$tw = 16;

#computation 
$I = 1/12*($b * $h**3 - $b*$h1**3 + $tw*$h1**3);
$S = 2*$I/$h;
$q1 = $sigma * $S/5*48/$L**2/1000000;
$q2 = 64*$tau*$I*$tw/3/$L/($b*$h**2 - $b*$h1**2 + $tw * $h1**2)/1000;
$qmax = min($q1,$q2);

#set tolerance
Context()->flags->set(
tolerance=>.01);

