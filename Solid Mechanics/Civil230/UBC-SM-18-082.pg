	#"PGcourse.pl", 	 # Customization file for the course
   	);

TEXT(beginproblem());

##############################################################
#
#  Setup
#
#

Context("Numeric");

#given
$p1 = 400;
$p2 = 360;
$e = 200;
$abe = 11100;
$acf = 9280;

#computation 
$fcf = ($p2*3.6 - $p1*1.5)/1.5;
$fbe = ($p1*3 - $p2*2.1)/1.5;
$dbe = $fbe * 3/$e/$abe;
$dcf = $fcf*2.4/$e/$acf;
$da = -(2*$dbe - $dcf)*1000;
$dd = -(12/5 * $dcf - 7/5*$dbe)*1000;

#set tolerance
Context()->flags->set(
tolerance=>.05,
tolType=>'absolute');

##############################################################
#
#  PGML 
#
#

BEGIN_PGML

[@ image("UBC-SM-18-082.png", width=>[$width], height=>[$height]) @]*

As shown in the figure, two steel bars [`BE`] and [`CF`] ([`E = [$e]`] [`GPa`], [`A_{BE} = [$abe]`] [`mm^2`], [`A_{CF} = [$acf]`] [`mm^2`]) support [`ABCD`]. Two vertical forces [`P_1 = [$p1]`] [`kN`] and [`P_2 = [$p2]`] [`kN`] act on the two ends (point [`A`] and point [`B`] of the beam). Determine the vertical displacement at point [`A`] and [`D`], respectively. Use a negative sign to indicate downward displacement, if applicable.

[`\delta_A=`] [_____]{"$da"} [`mm`]  
[`\delta_D=`] [_____]{"$dd"} [`mm`] 

END_PGML

