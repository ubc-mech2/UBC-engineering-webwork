Context("Numeric");
Context()->variables->add(P=>"Real");
Context()->variables->add(I=>"Real");
Context()->variables->add(J=>"Real");
Context()->variables->add(b=>"Real");
Context()->variables->remove("x");

#given


#computation 
$p1 = Formula("P I/(I + J)");
$p2 = Formula("P J/(I + J)");
$e = Formula("b/2 (J - I)/(J + I)");
$ratio = Formula("I/J");

#set tolerance
Context()->flags->set(
tolerance=>.01);

